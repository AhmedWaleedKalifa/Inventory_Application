<h3><%=title%></h3>
<% if(locals.errors){ %>
    <ul>
        <% errors.forEach(error=>{ %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>
<form action="/items/update/<%= item.id%>" method="Post">
    <input type="hidden" name="id" value="<%= item.id%>">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= item.name%>" required>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="<%= item.description%>" required>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" value="<%= item.quantity%>" required>
    <label for="price">Price</label>
    <input type="number" id="price" name="price" value="<%= item.price %>" required>
    <p>categories</p>
    <% if(locals.categories){%>
        <% for(let i=0;i< categories.length;i++){ %>
            <label for="<%=i%>"><%=categories[i].name%></label>
            <% if(itemCategories.includes(categories[i].id)){%>
                <input type="checkbox" value="<%= categories[i].id %>" name="category[]" id="<%= i%>" checked>
            <%}else{%>
            <input type="checkbox" value="<%= categories[i].id %>" name="category[]" id="<%= i%>">
            <%}%>
        <% }%>
    <% }%>
    <button type="submit">Update item</button>
</form>